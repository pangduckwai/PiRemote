<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="@dimen/dialog_minWidth"
		android:paddingTop="@dimen/margin_narrow"
		android:paddingLeft="@dimen/margin_narrow"
		android:paddingRight="@dimen/margin_narrow"
		android:paddingBottom="@dimen/margin_normal"
		android:orientation="vertical">

	<TextView
			android:id="@+id/message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/fab_margin"
			android:layout_marginStart="@dimen/margin_narrow"
			android:hint="@string/hint_password"
			android:textSize="@dimen/text_medium"/>

	<EditText
			android:id="@+id/secret"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/fab_margin"
			android:layout_marginStart="@dimen/fab_margin"
			android:layout_marginTop="@dimen/fab_margin"
			android:hint="@string/hint_password"
			android:textSize="@dimen/text_normal"
			android:maxLength="50"
			android:selectAllOnFocus="true"
			android:completionThreshold="0"
			android:inputType="textPassword"
			android:imeOptions="actionDone|flagNoExtractUi"
			android:importantForAutofill="no"/>

	<Button
			android:id="@+id/submit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="@dimen/fab_margin"
			android:background="?android:attr/selectableItemBackground"
			android:text="@string/label_okay" />
</LinearLayout>